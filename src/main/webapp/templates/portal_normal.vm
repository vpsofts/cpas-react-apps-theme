<!DOCTYPE html>

#parse ($init)

#set ($themePath = "/cpas-react-apps-theme")

<html class="#language("lang.dir") $root_css_class" dir="#language("lang.dir")" lang="$w3c_language_id">

<head>
	<!--[if lte IE 8]>
		<meta http-equiv="X-UA-Compatible" content="IE=8" />
	<![endif]-->

	#if ($request.getAttribute("CUSTOM_TITLE"))
		#set( $title = $request.getAttribute("CUSTOM_TITLE") )
	#elseif ($request.getAttribute("LIFERAY_SHARED_PREDEFINED_TITLE"))
		#set( $title = $the_title + ' - ' + $request.getAttribute("LIFERAY_SHARED_PREDEFINED_TITLE") )
	#else
		#set( $title = $the_title )
	#end
	<title>$title - Česká pojišťovna </title>

	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<meta name="robots" content="index,follow" />
	<meta name="googlebot" content="index,follow,snippet,archive" />
	<meta name="author" content="Česká pojišťovna" />

	$theme.include($top_head_include)


</head>


#set($userAgent = $request.getHeader("User-Agent").toLowerCase())
#set($responsiveClass = 'responsive')
#set($seznamScreenshoter = '')
#if($userAgent.matches(".*(screenshot).*"))
	#set($responsiveClass = '')
	#set($seznamScreenshoter = 'screenshoter')
#end

##Generated by Revive Adserver v3.2.4
<script type='text/javascript' src='https://adserver.ceskapojistovna.cz/www/delivery/spcjs.php?id=1'></script>

<body class="$css_class layout_$layoutTypePortlet.getLayoutTemplateId() $responsiveClass $seznamScreenshoter  #if($is_signed_in && $request.getSession().getAttribute("portal_dockbar") == 1)lr_admin#end">

#if($request.getParameter("dockbar"))
		$request.getSession().setAttribute("portal_dockbar", $request.getParameter("dockbar"))
#end

#set( $is_administrator = false )
#if($is_signed_in)
	## rozhodni, zda zobrazit dockbar; vysledek uloz do session
	#if($request.getParameter("dockbar"))
		$request.getSession().setAttribute("portal_dockbar", $request.getParameter("dockbar"))
	#elseif (!$request.getSession().getAttribute("portal_dockbar"))
		## zobraz dockbar na zaklade role uzivatele...
		$request.getSession().setAttribute("portal_dockbar", 0)
	#end

	#foreach($role in $user.getRoles())
		#if($role.getName() == "Dockbar")
			$request.getSession().setAttribute("portal_dockbar", 1)
		#end
		#if($role.getName() == "Administrator")
			$request.getSession().setAttribute("portal_dockbar", 1)
			#set( $is_administrator = true )
		#end
	#end

	#if ($request.getSession().getAttribute("portal_dockbar") == 1)
			#dockbar()
	#end
#end

<div id="wrapper" class="c">
	<div id="content">
		#if ($selectable)
			$theme.include($content_include)
		#else
			$portletDisplay.recycle()

			$portletDisplay.setTitle($the_title)

			$theme.wrapPortlet("portlet.vm", $content_include)
		#end
	</div>
</div>

<script type="text/javascript" src="$themePath/js/cpas-react.js"></script>

$theme.include($bottom_include)
</body>

</html>
